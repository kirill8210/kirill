    <div id="re<%=project.id%>" style="outline:2px solid #000; width:500px; margin:auto; background-color:#fff" > 

        <div style="background-color:#525; color:red;height:35px;"><%= best_in_place project, :name, as: :input, activator: "#edit-project-name-#{project.id}" %>

        <%= link_to  project, style:"float:right;", class: "btn btn-danger", remote: true, method: :delete do %>
            <i class="fa fa-trash-o"></i>
        <% end %>
        <%= link_to "#", class: 'btn btn-primary', id: "edit-project-name-#{project.id}", style:"float:right;" do %>
            <i class="fa fa-pencil"></i>
        <% end %>
        
        <br>
        </div>

        <%= form_for([project, Task.new], :remote => true) do |f| %>  

        <div>
        
        <br>

        <%= f.text_field :name %><%= f.submit "Create task", class: 'btn btn-success' %>

        </div>

        <div class="actions" >

        <% end %>

        <ul class="sortable" id="task<%=project.id%>" style="padding:0px;">

        <% project.tasks.each do |task| %>

            <%= render 'tasks/task', :task => task %>

        <% end %>

        </ul>

        </div>

    </div>
    

    